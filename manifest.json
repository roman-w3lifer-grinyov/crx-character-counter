{
  "manifest_version": 3,
  "name": "Character Counter",
  "version": "1.2.1",

  "action": {
    "default_icon": {
      "16": "img/icons/16x16.png",
      "24": "images/24x24.png",
      "32": "images/32x32.png"
    },
    "default_title": "Character Counter"
  },
  "description": "Count selected characters using the context menu",
  "icons": {
    "16": "img/icons/16x16.png",
    "48": "img/icons/48x48.png",
    "128": "img/icons/128x128.png"
  },

  "background": {
    "service_worker": "event-page.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content-script.js"]
    }
  ],
  "permissions": ["contextMenus"]
}
